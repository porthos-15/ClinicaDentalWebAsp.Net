@model ClinicaDental01.Models.CrearServicioViewModel
@{
}

<h1 style ="color: #0CAFFF; text-align=center; font-weight: bold; margin-top: 35px;
    width: 100%; " >Crear Servicio</h1>
<div>
    <img width="100" height="100"  style="float: right;"   src="~/img/diente-feliz.png">
</div>
<br />
<br/>
<form method="post" action="CrearServicio" class="mt-5">

    <div class="mb-3">
        <label  style="font-size: 16px;  font-weight: bold;" for="" class="form-label">Nombre</label>
        <input type="text" class="form-control" asp-for="NombreServicio">
    </div>

    <div class="mb-3">
        <label  style="font-size: 16px;  font-weight: bold;" for="" class="form-label">Descripcion</label>
        <input type="text" class="form-control" asp-for="DescripcionServicio">
    </div>

    <div class="mb-3">
        <label  style="font-size: 16px;  font-weight: bold;" for="" class="form-label">Costo</label>
        <input type="text" class="form-control" asp-for="CostoServicio">
    </div>


    <button type="submit" class="btn btn-primary">Submit</button>
</form>
