@model ClinicaDental01.Models.CrearCitaViewModel
@{
}

<h1 style="color: #0CAFFF; text-align=center; font-weight: bold; margin-top: 35px;
    width: 100%; ">
    Crear Cita
</h1>
<div>
    <img width="100" height="100" style="float: right;" src="~/img/diente-feliz.png">
</div>
<br />
<br />
<form method="post" action="CrearCita" class="mt-5">

    <div class="mb-3">
        <label style="font-size: 16px;  font-weight: bold;" for="" class="form-label">Fecha</label>
        <input type="date" class="form-control" asp-for="FechaCita">
    </div>


    <div class="mb-3">
        <label style="font-size: 16px;  font-weight: bold;" for="" class="form-label">Descripcion</label>
        <input type="text" class="form-control" asp-for="DescripcionCita">
    </div>



    <button type="submit" class="btn btn-primary">Submit</button>
</form>
