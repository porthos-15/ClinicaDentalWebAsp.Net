@page
@model LoginModel
@{
    ViewData["Title"] = "Iniciar sesión";
}

<h1 style="color: #0CAFFF; text-align=center; font-weight: bold; margin-top: 35px;
    width: 100%; ">@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
      
            <form id="account" method="post">
                <h2 style="color: #0CAFFF; text-align=center; font-weight: bold; margin-top: 35px;
    width: 100%; ">Utiliza una cuenta local para iniciar sesión.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Iniciar sesión</button>
                </div>
             <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">¿Ha olvidado su contraseña?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrarse como nuevo usuario</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar confirmación por correo electrónico</a>
                    </p>
                </div>
                 <img width="800" height="800"  style="text-align:right; position:relative; top:1500%; left:230%; right:90%; transform: translate(-50%, -50%); "   src="~/img/ClinicLogo2.png">
          
            </form>
                
    </div>

   
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
